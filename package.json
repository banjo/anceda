{
    "name": "anceda",
    "type": "module",
    "prettier": "@banjoanton/prettier-config",
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "scripts": {
        "dev": "dotenvx run -- run-p ui:dev server:dev",
        "build": "run-p db:generate ui:build server:build",
        "preview": "run-p ui:preview server:preview",
        "playground": "dotenvx run -- tsx src/playground.ts",
        "server:dev": "tsx watch src/index.ts",
        "server:build": "tsup",
        "server:preview": "NODE_ENV=production dotenvx run -- node ./build-api/index.js",
        "server:docker:build": "docker build -t anceda-api --progress=plain -f ./docker/Dockerfile.api .",
        "server:docker:run": "docker run --env-file .env -p 3009:3009 anceda-api",
        "ui:dev": "vite",
        "ui:build": "vite build",
        "ui:preview": "vite preview",
        "db:generate": "pnpm dlx prisma generate",
        "db:migrate:dev": "pnpm exec prisma migrate dev && pnpm run db:generate",
        "db:migrate:prod": "pnpm exec prisma migrate deploy",
        "db:seed": "pnpm exec prisma db seed",
        "db:reset": "pnpm exec prisma migrate reset --force",
        "db:logs": "docker compose -f docker/compose.yaml logs --follow",
        "db:start": "docker compose -f docker/compose.yaml up -d --remove-orphans",
        "db:stop": "docker compose -f docker/compose.yaml down --remove-orphans",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "format": "prettier --write .",
        "hoks:init": "pnpm dlx hoks --init",
        "content:generate": "tsx ./scripts/generate-content.ts"
    },
    "dependencies": {
        "@banjoanton/utils": "^1.1.0",
        "npm-run-all": "^4.1.5",
        "@hono/node-server": "^1.13.8",
        "@hono/standard-validator": "^0.1.2",
        "@hono/zod-validator": "^0.4.2",
        "@hookform/resolvers": "^3.10.0",
        "@prisma/client": "6.3.0",
        "@radix-ui/react-avatar": "^1.1.3",
        "@radix-ui/react-collapsible": "^1.1.3",
        "@radix-ui/react-dialog": "^1.1.5",
        "@radix-ui/react-dropdown-menu": "^2.1.5",
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/react-label": "^2.1.1",
        "@radix-ui/react-scroll-area": "^1.2.3",
        "@radix-ui/react-separator": "^1.1.1",
        "@radix-ui/react-slot": "^1.1.1",
        "@radix-ui/react-tabs": "^1.1.2",
        "@radix-ui/react-tooltip": "^1.1.7",
        "@tanstack/react-query": "^5.66.0",
        "@tanstack/react-router": "^1.99.0",
        "@tanstack/react-table": "^8.20.6",
        "better-auth": "^1.1.15",
        "class-variance-authority": "^0.7.1",
        "close-with-grace": "^2.2.0",
        "clsx": "^2.1.1",
        "cmdk": "^1.0.4",
        "framer-motion": "^11.18.2",
        "fs-extra": "^11.3.0",
        "globby": "^14.0.2",
        "hono": "^4.7.0",
        "i18next": "^24.2.2",
        "lucide-react": "^0.452.0",
        "pino": "^9.6.0",
        "pino-pretty": "^11.3.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.54.2",
        "react-hot-toast": "^2.5.1",
        "react-i18next": "^15.4.0",
        "tailwind-merge": "^2.6.0",
        "tailwindcss-animate": "^1.0.7",
        "zod": "^3.24.1",
        "zod-validation-error": "^3.4.0"
    },
    "devDependencies": {
        "@banjoanton/eslint-config": "^0.2.17",
        "@banjoanton/prettier-config": "^0.1.11",
        "@dotenvx/dotenvx": "^1.34.0",
        "@tanstack/router-devtools": "^1.99.0",
        "@tanstack/router-plugin": "^1.99.0",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.13.0",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.19.0",
        "hoks": "^0.1.17",
        "postcss": "^8.5.1",
        "prettier": "^3.4.2",
        "prisma": "^6.3.0",
        "tailwindcss": "^3.4.17",
        "tsup": "^8.3.6",
